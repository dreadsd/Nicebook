<%= form_with(model: Comment.new, class: "row", id: "comment-#{post.id}") do |f| %>
  <%= f.hidden_field :author_id, value: current_user.id, id: nil %>
  <%= f.hidden_field :commentable, value: post, id: nil %>
  <div class="col-1">
    <img src="https://bulma.io/images/placeholders/48x48.png" class="rounded-circle">
  </div>
  <div class="col">
    <%= f.text_field :body, class: "form-control rounded-pill comment-input", id: nil %>
  </div>
  <div class="col-1 pt-1">
    <%= link_to("", class: "text-decoration-none", onclick: "document.querySelector('#comment-#{post.id}').submit()") do %>
      <i class="bi-caret-right-fill"></i>
    <% end %>
  </div>
<% end %>
