<!DOCTYPE html>
<html>
  <head>
    <title>Nicebook</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="container-fluid gx-0">
    <nav class="navbar navbar-expand-lg bg-primary px-5">
      <div class="col-3">
        <%= link_to "Nicebook", root_path, class: "navbar-brand text-white text-decoration-none" %>
      </div>
      <% if user_signed_in? %>
        <%= render "review/navbar" %>
      <% end %>
    </nav>

    <div class="row gx-0">
      <div class="sidebar col-3">
        <% if user_signed_in? %>
          <%= render "review/left_sidebar" %>
        <% end %>
      </div>
      <div class="container-fluid col-6 px-5">
        <p id="notice"><%= notice %></p>
        <p id="alert"><%= alert %></p>
        <%= yield %>
      </div>
      <div class="sidebar col-3">
      </div>
    </div>
  </body>
</html>
